<?xml version="1.0" encoding="utf-8"?>
<com.zzkx.mtool.view.customview.scrollablelayout.ScrollableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrolable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/marginBorder">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/marginBorder"
            android:layout_marginRight="@dimen/marginBorder"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_bigcorner_white_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <EditText
                android:id="@+id/search_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/searchHint"
                android:imeOptions="actionSearch"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="@color/textHintColor"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_zoom"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginBorder">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/marginBorder"
                android:layout_weight="1"
                android:background="@drawable/shape_smallcorner_white_gray"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:scaleX="0.7"
                    android:scaleY="0.7"/>

                <TextView
                    android:id="@+id/tv_cat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商圈/地址"
                    android:textColor="@color/textTmp"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/marginBorder"
                android:layout_marginRight="@dimen/marginBorder"
                android:layout_weight="1"
                android:background="@drawable/shape_smallcorner_white_gray"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"/>

                <TextView
                    android:id="@+id/tv_cat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品"
                    android:textColor="@color/textTmp"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fr_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.zzkx.mtool.view.customview.scrollablelayout.ScrollableLayout>
