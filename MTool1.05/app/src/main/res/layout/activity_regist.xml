<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/marginBorder"
              android:paddingRight="@dimen/marginBorder">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="输入手机号码"
        android:textColor="@color/textTmp2"
        android:textSize="36sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册代表阅读并同意"
            android:textColor="@color/textTmp2"/>

        <TextView
            android:id="@+id/tv_agreement1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用条款"
            android:textColor="@color/blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/textTmp2"/>

        <TextView
            android:id="@+id/tv_agreement2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textColor="@color/blue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_country"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="国家/地区"
            android:textColor="@color/textHintColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="中国"
            android:textColor="@color/textTmp2"
            android:textSize="18sp"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:src="@mipmap/ic_arr_gray_right"/>
    </LinearLayout>

    <include layout="@layout/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_country_num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textColor="@color/textHintColor"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/textTmp2"
            android:textSize="18sp"/>
    </LinearLayout>

    <include layout="@layout/divider"/>

    <TextView
        android:id="@+id/tv_send_msg"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="发送短信"
        android:background="@drawable/def_red_corner_selector"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
</LinearLayout>