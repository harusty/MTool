<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"
                android:text="订单状态："
                android:textColor="@color/ligthBlue"
                android:textStyle="bold"/>

            <include layout="@layout/divider"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"
                android:text="服务信息"
                android:textColor="@color/ligthBlue"
                android:textStyle="bold"/>

            <include layout="@layout/divider"/>

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"
                android:textColor="@color/textTmp"/>

            <include layout="@layout/divider"/>

            <LinearLayout
                android:id="@+id/layout_qr"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder">

                <TextView
                    android:id="@+id/tv_qr_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textTmp"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5.5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5.5dp"
                    android:src="@mipmap/ic_qr"/>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/marginBorder"
                android:paddingLeft="@dimen/marginBorder"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/textTmp"/>

                <TextView
                    android:id="@+id/tv_shop_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/textTmp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_shop_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textColor="@color/textTmp"/>

                    <ImageView
                        android:id="@+id/iv_shop_map"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="5.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5.5dp"
                        android:src="@mipmap/ic_map_gray"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/marginBorder"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"
                android:text="订单信息"
                android:textColor="@color/ligthBlue"
                android:textStyle="bold"/>

            <include layout="@layout/divider"/>

            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"/>

            <include layout="@layout/divider"/>

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"/>

            <include layout="@layout/divider"/>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/marginBorder"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"
                android:text="商品信息"
                android:textColor="@color/ligthBlue"
                android:textStyle="bold"/>

            <include layout="@layout/divider"/>

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"/>

            <include layout="@layout/divider"/>

            <LinearLayout
                android:id="@+id/layout_order_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_order_simple"/>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_to_envaluate"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/marginBorder"
                android:layout_marginTop="10dp"
                android:background="@drawable/def_white_selector"
                android:gravity="center"
                android:paddingRight="@dimen/marginBorder">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/marginBorder"
                    android:text="订单评价"
                    android:textColor="@color/textTmp2"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="13dp"
                    android:src="@mipmap/ic_arr_gray_right"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/windowBg">

        <TextView
            android:id="@+id/tv_one_more_time"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/marginBorder"
            android:layout_marginRight="@dimen/marginBorder"
            android:background="@drawable/selector_red_empty_corder"
            android:gravity="center"
            android:text="@string/oneMoreTime"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</LinearLayout>
