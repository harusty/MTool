<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder">

                <com.zzkx.mtool.view.customview.RoundImageView
                    android:id="@+id/iv_shop_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_menu"/>

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textTmp2"/>
            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/marginBorder"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物美价廉"
                        android:textColor="@color/textTmp2"/>

                    <com.zzkx.mtool.view.customview.MtoolRatingBar
                        android:id="@+id/rating_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginBorder"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="@dimen/marginBorder"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"
                        android:textColor="@color/textTmp2"/>

                    <com.zzkx.mtool.view.customview.MtoolRatingBar
                        android:id="@+id/rating_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginBorder"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="@dimen/marginBorder"
                    android:layout_marginRight="@dimen/marginBorder"
                    android:background="@drawable/shape_smallcorner_white_gray"
                    android:gravity="top"
                    android:hint="请输入对商家的评语"
                    android:padding="10dp"
                    android:textColor="@color/textTmp2"
                    android:textColorHint="@color/textHintColor"
                    android:textSize="12sp"/>

                <com.zzkx.mtool.view.customview.CategoryLayout
                    android:id="@+id/image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/marginBorder"
                    android:layout_marginRight="@dimen/marginBorder"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/ic_image_add"/>
                </com.zzkx.mtool.view.customview.CategoryLayout>

                <include layout="@layout/divider"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder"
                android:text="评价单品"
                android:textColor="@color/textTmp2"/>

            <include layout="@layout/divider"/>

            <LinearLayout
                android:id="@+id/single_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/marginBorder"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginBorder">

                <com.zzkx.mtool.view.customview.RoundImageView
                    android:id="@+id/iv_deliver_log"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_menu"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_deliver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textTmp2"/>

                    <TextView
                        android:id="@+id/tv_deliver_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textHintColor"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="@dimen/marginBorder"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务质量"
                    android:textColor="@color/textTmp2"/>

                <com.zzkx.mtool.view.customview.MtoolRatingBar
                    android:id="@+id/rating_deliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginBorder"/>
            </LinearLayout>

            <com.zzkx.mtool.view.customview.CategoryLayout
                android:id="@+id/delever_tag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/marginBorder"
                android:paddingRight="@dimen/marginBorder"
                android:paddingTop="10dp">

                <CheckBox
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/DelivertTag"
                    android:text="送货快"
                    />

                <CheckBox
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/DelivertTag"
                    android:text="货品保存完好"
                    />

                <CheckBox
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/DelivertTag"
                    android:text="送货上门"
                    />

                <CheckBox
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/DelivertTag"
                    android:text="送上楼"
                    />

                <CheckBox
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/DelivertTag"
                    android:text="服务态度良好"
                    />

                <CheckBox
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    style="@style/DelivertTag"
                    android:text="穿衣整齐"
                    />
            </com.zzkx.mtool.view.customview.CategoryLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/windowBg">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/marginBorder"
            android:layout_marginRight="@dimen/marginBorder"
            android:background="@drawable/selector_red_empty_corder"
            android:gravity="center"
            android:text="@string/submit_evaluate"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>
</LinearLayout>

