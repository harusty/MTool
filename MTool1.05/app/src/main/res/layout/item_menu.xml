<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/def_white_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingTop="10dp">

        <com.zzkx.mtool.view.customview.RoundImageView
            android:id="@+id/iv_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_menu"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鱼香肉丝"
                android:textColor="@color/textTmp"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="好评：100%/月销量：456"
                android:textColor="@color/textHintColor"
                android:textSize="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="99"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/oval_gray"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="1"
                    android:textColor="@color/blue"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ctr_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/def_white_selector"
                android:padding="10dp"
                android:src="@mipmap/ic_blue_add"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/def_white_selector"
                android:padding="10dp"
                android:src="@mipmap/ic_minus"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_empty"
            android:visibility="gone"
            android:layout_marginRight="@dimen/marginBorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="售馨"
            android:textColor="@color/textHintColor"/>
    </LinearLayout>

    <include layout="@layout/divider"/>
</LinearLayout>