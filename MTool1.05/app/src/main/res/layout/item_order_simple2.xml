<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/marginBorder">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/marginBorder">

            <com.zzkx.mtool.view.customview.RoundImageView
                android:id="@+id/iv_food"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/tv_section"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="麻辣鸡丝"
                android:textColor="@color/textTmp"/>

            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_envaluate_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="已评价"
                android:textColor="@color/textHintColor"
                android:textSize="12sp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_arr_gray_right"/>
    </LinearLayout>

    <include layout="@layout/divider"/>
</LinearLayout>