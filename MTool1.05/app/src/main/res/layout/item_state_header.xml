<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/marginBorder"
    android:paddingRight="@dimen/marginBorder">

    <com.zzkx.mtool.view.customview.RoundImageView
        android:id="@+id/iv_user_header"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_user_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textTmp2"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/textHintColor"
            android:textSize="10sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/def_white_circle_selector"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@mipmap/ic_dot_main"/>


    <LinearLayout
        android:id="@+id/layout_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:layout_alignTop="@+id/iv_more"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/ic_support2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/marginBorder"
            android:background="@drawable/def_white_circle_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="4.5dp"
            android:paddingRight="4.5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/ic_good"/>

        <TextView
            android:id="@+id/tv_supports2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/textHintColor"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_msgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/layout_support"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/ic_msg2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/def_white_circle_selector"
            android:paddingBottom="4.5dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4.5dp"
            android:src="@mipmap/ic_msg_light_gray_2"/>

        <TextView
            android:id="@+id/tv_msgs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textColor="@color/textHintColor"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dividerColor"
        android:orientation="vertical"/>
</RelativeLayout>