<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_share_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/marginBorder"
        android:paddingRight="@dimen/marginBorder"
        android:paddingTop="10dp"
        android:textColor="@color/textTmp2"
        android:textSize="12sp"/>

    <include layout="@layout/divider"/>

    <LinearLayout
        android:background="@color/windowBg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/tv_name_orgin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用/原著：玛丽/"
            android:textColor="@color/textHintColor"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_show_orgin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/marginBorder"
            android:gravity="center"
            android:text="查看原文"
            android:textColor="@color/blue"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>