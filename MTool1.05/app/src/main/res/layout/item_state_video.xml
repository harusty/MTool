<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/marginBorder"
              android:paddingRight="@dimen/marginBorder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <com.zzkx.mtool.view.customview.RoundImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="165dp"/>

        <com.aries.ui.view.radius.RadiusFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rv_backgroundColor="@color/blackTrans2"
            app:rv_radius="3dp"/>

        <View
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/ic_13"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/textTmp2"
        android:textSize="12sp"/>
</LinearLayout>