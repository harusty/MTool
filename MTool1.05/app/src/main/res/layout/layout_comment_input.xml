<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bottom_edit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/marginBorder"
        android:layout_marginRight="@dimen/marginBorder"
        android:src="@mipmap/ic_bottom_edit"/>

    <include layout="@layout/divider"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBgDark"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/marginBorder"
            android:layout_marginRight="@dimen/marginBorder"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_smallcorner_white_gray"
            android:gravity="top"
            android:hint="发表评论..."
            android:padding="10dp"
            android:textColor="@color/textTmp2"
            android:textColorHint="@color/textHintColor"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/marginBorder">

            <ImageView
                android:id="@+id/iv_at"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_a"/>

            <ImageView
                android:id="@+id/iv_async"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_circle_share"/>


            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/marginBorder"
                android:background="@drawable/oval_main"
                android:gravity="center"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
